# compiler flags.  -g for debug, -O3 for optimizatio
CFLAGS=-g -O3
OBJS = tokenizer.o history.o uimain.o
# first target is built by default
all: tokenizer
#test: tester

# include file dependencies
tokenizer.o : tokenizer.h 
history.o: history.h
#tester.o: history.h tokenizer.h
uimain.o: history.h tokenizer.h

# $@=target, $^=prerequisites
tokenizer:tokenizer.o history.o uimain.o
	cc -o $@ $^  $(CFLAGS)

#tester: tokenizer.o  history.o tester.o
#	cc -o $(test) $^$(CFLAGS)
# deletes files generated by compilation
clean:
	rm -f *.o  tokenizer

run: tokenizer
	./tokenizer
